@model IEnumerable<ToDoViewModel>

<h1>To Do List</h1>
<hr />

<p><a asp-controller="ToDo" asp-action="Create">Create New To Do</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Is Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@(item.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
